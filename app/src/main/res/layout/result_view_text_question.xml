<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="370dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textQ_statement"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/purple_500"
                android:gravity="center"
                android:text="@string/statement"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <View
                android:id="@+id/textQ_line_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignBottom="@id/textQ_statement"
                android:background="@color/purple_700" />

            <TextView
                android:id="@+id/textQ_answer_1"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/textQ_statement"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingTop="2dp"
                android:textSize="15sp"
                android:text="respuesta primera"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/textQ_line_2"
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/textQ_answer_1"
                android:background="@color/purple_700" />

            <TextView
                android:id="@+id/textQ_answer_2"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/textQ_answer_1"
                android:gravity="center"
                android:textSize="15sp"
                android:background="#FFFFFF"
                android:text="respuesta segunda"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/textQ_line_3"
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/textQ_answer_2"
                android:background="@color/purple_700" />

            <TextView
                android:id="@+id/textQ_answer_3"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/textQ_answer_2"
                android:gravity="center"
                android:textSize="15sp"
                android:background="#FFFFFF"
                android:text="respuesta tercera"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/textQ_line_4"
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/textQ_answer_3"
                android:background="@color/purple_700" />

            <TextView
                android:id="@+id/textQ_answer_4"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/textQ_answer_3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="15sp"
                android:text="respuesta cuarta"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>