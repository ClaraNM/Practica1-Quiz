<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="?attr/colorOnBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <ImageView
        android:id="@+id/main_title_img"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_title_img_light" />

    <Button
        android:id="@+id/button_startQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:text="@string/jugar"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button_opciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:text="@string/opciones"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button_perfiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:text="@string/perfiles"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button_clasificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:text="@string/clasificaci_n"
        android:textSize="26sp" />

</LinearLayout>