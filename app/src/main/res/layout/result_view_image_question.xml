<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="370dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="?attr/colorOnPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/imgQ_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="?attr/colorPrimaryVariant"
                android:gravity="center"
                android:text="@string/statement"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <View
                android:id="@+id/imgQ_line_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignBottom="@id/imgQ_statement"
                android:background="?attr/colorOnSecondary"/>

            <ImageView
                android:id="@+id/imgQ_image"
                android:layout_width="250dp"
                android:layout_height="180dp"
                android:layout_alignTop="@id/imgQ_line_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <View
                android:id="@+id/imgQ_line_img"
                android:layout_width="320dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/imgQ_image"
                android:layout_centerHorizontal="true"
                android:background="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/imgQ_answer_1"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/imgQ_line_img"
                android:background="?attr/colorOnPrimary"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="respuesta primera"
                android:textColor="?attr/colorPrimaryVariant"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15sp" />

            <View
                android:id="@+id/imgQ_line_2"
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_alignBottom="@id/imgQ_answer_1"
                android:layout_centerHorizontal="true"
                android:background="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/imgQ_answer_2"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/imgQ_answer_1"
                android:background="?attr/colorOnPrimary"
                android:gravity="center"
                android:text="respuesta segunda"
                android:textColor="?attr/colorPrimaryVariant"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15sp" />

            <View
                android:id="@+id/imgQ_line_3"
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_alignBottom="@id/imgQ_answer_2"
                android:layout_centerHorizontal="true"
                android:background="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/imgQ_answer_3"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/imgQ_answer_2"
                android:background="?attr/colorOnPrimary"
                android:gravity="center"
                android:text="respuesta tercera"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

            <View
                android:id="@+id/imgQ_line_4"
                android:layout_width="280dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/imgQ_answer_3"
                android:background="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/imgQ_answer_4"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/imgQ_answer_3"
                android:background="?attr/colorOnPrimary"
                android:gravity="center"
                android:text="respuesta cuarta"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>